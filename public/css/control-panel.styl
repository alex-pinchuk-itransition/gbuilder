.control-panel
	width 960px
	height 250px
	position absolute
	bottom 0px
	left 50%
	margin-left -480px

.controls
	width 100%
	height 190px
	position absolute
	bottom 0px
	background #3e627e
	background -moz-linear-gradient(-45deg,  #3e627e 0%, #838484 50%, #528d9f 100%)
	background -webkit-linear-gradient(-45deg,  #3e627e 0%,#838484 50%,#528d9f 100%)
	background linear-gradient(135deg,  #3e627e 0%,#838484 50%,#528d9f 100%)

.nav-control
	width 100%
	height 70px
	position absolute
	bottom 0px
	background-color #fff
	opacity 0.1


.tab
	cursor pointer
	width 280px
	height 60px
	position absolute
	color #fff
	text-align center
	font-size 16px
	line-height 60px
	background-color #538c9e
	left 340px
	&.selected
		z-index 20
		height 70px
		background-color #012734
		box-shadow 0px 0px 5px #0007
	&:first-child
		left 60px
		border-radius 15px 0 0 0
	&:last-child
		left inherit
		right 60px
		border-radius 0 15px 0 0
		&:before
			width 1px
			height 40px
			position absolute
			background-color #fff7
			display block
			z-index 20
			top 10px
			content ' '
.side
	cursor pointer
	width 160px
	height 120px
	float left
	color #fff
	text-align center
	font-size 16px
	&:before
		width 1px
		height 120px
		position absolute
		background-color #fff7
		display block
		content ' '
	&.selected
		color #f0a322
		&:after
			width 160px
			height 3px
			top 117px
			position absolute
			background-color #f0a322
			display block
			content ' '
	span
		display block
		margin-top 55px

.color-pik
	width 960px
	height 70px
	position absolute
	bottom 0px
	left 50%
	margin-left -480px
	div
		cursor pointer
		width 40px
		height 30px
		margin 20px
		box-shadow 3px 3px 20px #0003
		float left
		border-radius 10px

#scene
	width 800px
	height 800px
	position absolute
	left 50%
	margin-left -400px
	for i in 1..30
		@media (min-height: (500 + i * 20)px)
			top: ((125 + i * 10) - 400)px
